<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#9febff">

    <!-- Todo: use a better design for start screen -->

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:id="@+id/start_game_button"
        android:layout_marginTop="172dp"
        android:onClick="onStartGameClick"
        android:drawableLeft="@mipmap/arrow16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:id="@+id/settings_button"
        android:onClick="onSettingsClick"
        android:layout_marginTop="41dp"
        android:drawableLeft="@mipmap/spanner8"
        android:layout_below="@+id/start_game_button"
        android:layout_alignStart="@+id/start_game_button" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/highscore"
        android:id="@+id/highscore_button"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/settings_button"
        android:layout_alignStart="@+id/settings_button"
        android:layout_alignEnd="@+id/settings_button"
        android:drawableLeft="@mipmap/trophy53"/>

</RelativeLayout>
